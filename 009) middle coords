#include <iostream>
using std::cout;
using std::cin;
using std::endl;

int main(){
    double coord1x, coord1z, coord2x, coord2z;
    int mcoord1x, mcoord2x, mcoord1z, mcoord2z;
    
    cout << "What are the first coords: ";
    cin >> coord1x >> coord1z;
    cout << "What are the second coords: ";
    cin >> coord2x >> coord2z;
    
    double bigx = (coord1x>coord2x || coord1x==coord2x) ? coord1x : coord2x;
    double smallx = (coord1x<coord2x) ? coord1x : coord2x;
    double bigz = (coord1z>coord2z || coord1z==coord2z) ? coord1z : coord2z;
    double smallz = (coord1z<coord2z) ? coord1z : coord2z;

    int xdif=bigx-smallx;
    int zdif=bigz-smallz;
    
    if(xdif%2==1 || zdif%2==1 || xdif==0 || zdif==0){
        mcoord1x=(xdif/2)+smallx;
        mcoord2x=(xdif/2)+smallx+1;
        mcoord1z=(zdif/2)+smallz;
        mcoord2z=(zdif/2)+smallz+1;
    }
    if(xdif%2==0 && zdif%2==0){
        int mcoordx=(xdif/2)+smallx;
        int mcoordz=(zdif/2)+smallz;
        cout << "The coords in the middle are "<< mcoordx << " " << mcoordz << ".";
    }
    if(xdif%2==1 && zdif%2==1){
        cout << "The coords in the middle are "<< mcoord1x << " " << mcoord1z << "." << endl;
        cout << "The coords in the middle are "<< mcoord1x << " " << mcoord2z << "." << endl;
        cout << "The coords in the middle are "<< mcoord2x << " " << mcoord1z << "." << endl;
        cout << "The coords in the middle are "<< mcoord2x << " " << mcoord2z << "." << endl;
    }
    if(xdif%2==1 && (zdif==0 || zdif%2==0)){
        cout << "The coords in the middle are "<< mcoord1x << " " << mcoord1z << "." << endl;
        cout << "The coords in the middle are "<< mcoord2x << " " << mcoord1z << "." << endl;
    }
    if(zdif%2==1 && (xdif==0 || xdif%2==0)){
        cout << "The coords in the middle are "<< mcoord1x << " " << mcoord1z << "." << endl;
        cout << "The coords in the middle are "<< mcoord1x << " " << mcoord2z << "." << endl;
    }
    return 0;
}
