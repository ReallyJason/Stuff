#include <iostream>
#include <string>
#include <ctime>
using std::cin;
using std::cout;
using std::string;
using std::endl;

void birthday (){
    string month;
    int day, year, bm=100;
    int a[12][1];
    
    setenv("TZ", "EST5EDT", 1); // Set the timezone to Eastern Time (ET)
    tzset(); // Apply the changes
    time_t currentTime; // Get the current time in Eastern Time
    time(&currentTime);
    struct tm *localTime = localtime(&currentTime); // Convert the time to local time (Eastern Time)
    
    std::time_t t = std::time(nullptr);
    std::tm *const pTInfo = std::localtime(&t);
    int mdate=pTInfo->tm_mday; //day in the month
    int mmonth=pTInfo->tm_mon; //the #month-1
    int ThisYear=(1900 + pTInfo->tm_year-year-0);
    
    cout << "When is your birthday? ";
    cin >> month >> day >> year;
    if (month=="January"){
        if(day>31 || day<1){
            cout << "The day of your birth month is impossible.";
            exit(0);
        }
        bm=1;
    }
    if (month=="February"){
        if(day>29 || day<1){
            cout << "The day of your birth month is impossible.";
            exit(0);
        }
        bm=2;
    }
    if (month=="March"){
        if(day>31 || day<1){
            cout << "The day of your birth month is impossible.";
            exit(0);
        }
        bm=3;
    }
    if (month=="April"){
        if(day>30 || day<1){
            cout << "The day of your birth month is impossible.";
            exit(0);
        }
        bm=4;
    }
    if (month=="May"){
        if(day>31 || day<1){
            cout << "The day of your birth month is impossible.";
            exit(0);
        }
        bm=5;
    }
    if (month=="June"){
        if(day>30 || day<1){
            cout << "The day of your birth month is impossible.";
            exit(0);
        }
        bm=6;
    }
    if (month=="July"){
        if(day>31 || day<1){
            cout << "The day of your birth month is impossible.";
            exit(0);
        }
        bm=7;
    }
    if (month=="August"){
        if(day>31 || day<1){
            cout << "The day of your birth month is impossible.";
            exit(0);
        }
        bm=8;
    }
    if (month=="September"){
        if(day>30 || day<1){
            cout << "The day of your birth month is impossible.";
            exit(0);
        }
        bm=9;
    }
    if (month=="October"){
        if(day>31 || day<1){
            cout << "The day of your birth month is impossible.";
            exit(0);
        }
        bm=10;
    }
    if (month=="November"){
        if(day>30 || day<1){
            cout << "The day of your birth month is impossible.";
            exit(0);
        }
        bm=11;
    }
    if (month=="December"){
        if(day>31 || day<1){
            cout << "The day of your birth month is impossible.";
            exit(0);
        }
        bm=12;
    }
    if(bm<1 || bm>12){
        cout << "You've incorrectly spelled the month.";
        exit(0);
    }
    
    if(bm<mmonth+1){
        if(((ThisYear+1 % 4 == 0) && (ThisYear+1 % 100 != 0)) || (ThisYear+1 % 400 == 0)) int a[12][1]={{31},{29},{31},{30},{31},{30},{31},{31},{30},{31},{30},{31}};
        else int a[12][1]={{31},{28},{31},{30},{31},{30},{31},{31},{30},{31},{30},{31}};
    }
    else{
        if(((ThisYear % 4 == 0) && (ThisYear % 100 != 0)) || (ThisYear % 400 == 0)) int a[12][1]={{31},{29},{31},{30},{31},{30},{31},{31},{30},{31},{30},{31}};
        else int a[12][1]={{31},{28},{31},{30},{31},{30},{31},{31},{30},{31},{30},{31}};
    }
    static int bdate=0;
    
    if(bm==mmonth+1){
        if(mdate>day)cout << "Your birthday will be in " << (day-mdate+365) << " days.";
        if(mdate<day)cout << "Your birthday will be in " << day-mdate << " days.";
        if(mdate==day)cout << "Today is your birthday!";
    }
    if(bm>mmonth+1){
        if(bm-mmonth==2){
            bdate=((a[mmonth][0]-mdate)+day);
            cout << "Your birthday will be in " << bdate << " days.";
            exit(0);
        }
        else for(int i=mmonth+1;i<bm-1;i++)bdate=bdate+a[i][0];
        bdate=bdate+(a[mmonth][0]-mdate)+day;
        cout << "Your birthday will be in " << bdate << " days.";
    }
    if(bm<mmonth+1){
        if(mmonth+1==12 && bm==1){
            bdate=((a[mmonth%11][0]-mdate)+day);
            cout << "Your birthday will be in " << bdate << " days.";
        }
        else{
            for(int i=mmonth+1;i<(bm+mmonth);i++){
                bdate=bdate+a[i%12][0];
                cout << bdate << endl;
            }
            bdate=bdate+(a[mmonth][0]-mdate)+day;
            cout << "Your birthday will be in " << bdate << " days.";
        }
    }
}

int main(){
    birthday();
    return 0;
}
