#include <iostream>
using namespace std;

int main(){
    double coord1x, coord1z, coord2x, coord2z, mcoordx, mcoordz, smallx, bigx, smallz, bigz;
    int mcoord1x, mcoord2x, mcoord1z, mcoord2z, xdif, zdif;
    
    cout << "What are the first coords: ";
    cin >> coord1x >> coord1z;
    cout << "What are the second coords: ";
    cin >> coord2x >> coord2z;
    
    if(coord1x>coord2x){
        bigx=coord1x;
        smallx=coord2x;
    }
    if(coord2x>coord1x){
        bigx=coord2x;
        smallx=coord1x;
    }
    if(coord1z>coord2z){
        bigz=coord1z;
        smallz=coord2z;
    }
    if(coord2z>coord1z){
        bigz=coord2z;
        smallz=coord1z;
    }
    if(coord1x==coord2x){
        bigx=coord1x;
        smallx=coord2x;
    }
    if(coord1z==coord2z){
        bigz=coord2z;
        smallz=coord1z;
    }
    
    xdif=bigx-smallx;
    zdif=bigz-smallz;
    if(xdif%2==1){
        mcoord1x=(xdif/2)+smallx;
        mcoord2x=(xdif/2)+smallx+1;
    }
    if(zdif%2==1){
        mcoord1z=(zdif/2)+smallz;
        mcoord2z=(zdif/2)+smallz+1;
    }
    if(xdif%2==0 && zdif%2==0){
        mcoordx=(xdif/2)+smallx;
        mcoordz=(zdif/2)+smallz;
        cout << "The coords in the middle are "<< mcoordx << " " << mcoordz << ".";
    }
    if(xdif%2==0 && xdif==0){
        mcoord1x=(xdif/2)+smallx;
        mcoord1z=(zdif/2)+smallz;
    }
    if(zdif%2==0 && zdif==0){
        mcoord2x=(xdif/2)+smallx;
        mcoord2z=(zdif/2)+smallz;
    }
    if(xdif==0){
        mcoord1x=(xdif/2)+smallx;
        mcoord1z=(zdif/2)+smallz;
    }
    if(zdif==0){
        mcoord2x=(xdif/2)+smallx;
        mcoord2z=(zdif/2)+smallz;
    }
    if(xdif%2==1 && zdif%2==1){
        cout << "The coords in the middle are "<< mcoord1x << " " << mcoord1z << "." << endl;
        cout << "The coords in the middle are "<< mcoord1x << " " << mcoord2z << "." << endl;
        cout << "The coords in the middle are "<< mcoord2x << " " << mcoord1z << "." << endl;
        cout << "The coords in the middle are "<< mcoord2x << " " << mcoord2z << "." << endl;
    }
    if(xdif%2==1 && zdif==0){
        cout << "The coords in the middle are "<< mcoord1x << " " << mcoord2z << "." << endl;
        cout << "The coords in the middle are "<< mcoord2x+1 << " " << mcoord2z << "." << endl;
    }
    if(zdif%2==1 && xdif==0){
        cout << "The coords in the middle are "<< mcoord1x << " " << mcoord1z << "." << endl;
        cout << "The coords in the middle are "<< mcoord1x << " " << mcoord2z << "." << endl;
    }
    return 0;
}
