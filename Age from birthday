#include <iostream>
#include <string>
#include <ctime>
using std::cin;
using std::cout;
using std::string;

int cmonth(string month){
    if (month=="January")return 1;
    if (month=="February")return 2;
    if (month=="March")return 3;
    if (month=="April")return 4;
    if (month=="May")return 5;
    if (month=="June")return 6;
    if (month=="July")return 7;
    if (month=="August")return 8;
    if (month=="September")return 9;
    if (month=="October")return 10;
    if (month=="November")return 11;
    if (month=="December")return 12;
    cout << "You've incorrectly spelled the month.";
    exit(0);
}

int birthday (){
    string month;
    int day, year;
    std::time_t t = std::time(nullptr);
    std::tm *const pTInfo = std::localtime(&t);
    int mdate=pTInfo->tm_mday; //day in the month
    int mmonth=pTInfo->tm_mon; //the #month-1
    cout << "When is your birthday? ";
    cin >> month >> day >> year;
    int m=cmonth(month);
    
    if(m<mmonth+1)return (1900 + pTInfo->tm_year-year-0); //tm_year shows the number of years since 1900
    else if (m==mmonth+1){
        if (day<mdate) return (1900 + pTInfo->tm_year-year-0);
    }
    return (1900 + pTInfo->tm_year-year-1);
}

int main(){
    cout << birthday();
    return 0;
}
